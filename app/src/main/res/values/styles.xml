<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProductListItemName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/colorTransparentAccent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProductGridItemImage">
        <item name="android:layout_height">@dimen/character_list_item_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>

    </style>

    <style name="FavoriteListItemName" parent="ProductListItemName">
        <item name="android:background">@color/colorTransparentAccent</item>
    </style>

    <style name="ProductDetailSectionTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProductDetailSectionName" parent="ProductDetailSectionTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ProductDetailHeaderSectionTitle" parent="ProductDetailSectionTitle">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ProductDetailSectionBody">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProductDetailHeaderSectionBody" parent="ProductDetailSectionBody">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ProductDetailLocationSectionCard">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ProductDetailLocationSectionBody" parent="ProductDetailSectionBody">
        <item name="android:maxLines">3</item>
    </style>
</resources>